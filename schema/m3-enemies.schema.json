{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://raw.githubusercontent.com/miketrethewey/sm-json-data/master/schema/m3-enemies.schema.json",
  "type": "object",
  "title": "Super Metroid Enemy Schema",
  "properties": {
    "enemies": {
      "type": "array",
      "items": {
        "$id": "#/items",
        "type": "object",
        "title": "Enemy Object",
        "description": "Enemy Object",
        "required": [
          "id",
          "name",
          "dmgToSamus",
          "hp",
          "drops",
          "dims",
          "freezable",
          "invul",
          "mult"
        ],
        "properties": {
          "id": {
            "$id": "#/items/properties/id",
            "type": "integer",
            "title": "Enemy ID",
            "description": "Identifier for this enemy, unique across the entire game",
            "default": 0,
            "examples": [
              1
            ]
          },
          "name": {
            "$id": "#/items/properties/name",
            "type": "string",
            "title": "Enemy Name",
            "description": "As it appears in the SuperMetroid.run wiki",
            "default": "",
            "examples": [
              "Beetom"
            ],
            "pattern": "^(.*)$"
          },
          "dmgToSamus": {
            "$id": "#/items/properties/dmgToSamus",
            "type": "array",
            "title": "Damage to Samus",
            "description": "An array; Power Suit, Varia Suit, Gravity Suit",
            "items": {
              "$id": "#/items/properties/dmgToSamus/items",
              "type": "integer",
              "title": "Damage Values",
              "default": 0,
              "examples": [
                10,
                5,
                2
              ]
            }
          },
          "hp": {
            "$id": "#/items/properties/hp",
            "type": "integer",
            "title": "Enemy HP",
            "description": "Amount of health points that the Enemy has",
            "default": 0,
            "examples": [
              50
            ]
          },
          "note": {
            "$id": "#/items/properties/note",
            "type": "string",
            "title": "Note Field",
            "default": "",
            "pattern": "^(.*)$"
          },
          "drops": {
            "$id": "#/items/properties/drops",
            "type": "object",
            "title": "Percentage of Enemy Drops",
            "required": [
              "no-drop",
              "small-energy",
              "big-energy",
              "missile",
              "super",
              "powerbomb"
            ],
            "properties": {
              "no-drop": {
                "$id": "#/items/properties/drops/properties/no-drop",
                "type": "number",
                "title": "% of Nothing",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "small-energy": {
                "$id": "#/items/properties/drops/properties/small-energy",
                "type": "number",
                "title": "% of Small Energy",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "big-energy": {
                "$id": "#/items/properties/drops/properties/big-energy",
                "type": "number",
                "title": "% of Big Energy",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "missile": {
                "$id": "#/items/properties/drops/properties/missile",
                "type": "number",
                "title": "% of Missiles",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "super": {
                "$id": "#/items/properties/drops/properties/super",
                "type": "number",
                "title": "% of Super Missiles",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "powerbomb": {
                "$id": "#/items/properties/drops/properties/powerbomb",
                "type": "number",
                "title": "% of Power Bombs",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              }
            }
          },
          "dims": {
            "$id": "#/items/properties/dims",
            "type": "object",
            "title": "Enemy Sprite Dimensions",
            "description": "Dimensions in pixels",
            "required": [
              "w",
              "h"
            ],
            "properties": {
              "w": {
                "$id": "#/items/properties/dims/properties/w",
                "type": "integer",
                "title": "Pixel Width",
                "default": 0,
                "examples": [
                  8
                ]
              },
              "h": {
                "$id": "#/items/properties/dims/properties/h",
                "type": "integer",
                "title": "Pixel Height",
                "default": 0,
                "examples": [
                  8
                ]
              }
            }
          },
          "freezable": {
            "$id": "#/items/properties/freezable",
            "type": "boolean",
            "title": "Freezable?",
            "description": "Can this Enemy be frozen by Ice Beam?",
            "default": false,
            "examples": [
              false
            ]
          },
          "invul": {
            "$id": "#/items/properties/invul",
            "type": [ "array", "boolean" ],
            "title": "Invulnerability",
            "description": "What items can't damage this Enemy?",
            "default": []
          },
          "mult": {
            "$id": "#/items/properties/mult",
            "type": "object",
            "title": "Damage Multipliers",
            "description": "What items get multipliers against this Enemy?",
            "default": {}
          }
        }
      }
    }
  }
}
